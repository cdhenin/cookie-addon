{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "homepage_url": "http://localhost:8080/",
  "description": "__MSG_extensionDescription__",
  "default_locale": "fr",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": [
      "js/browser-polyfill.min.js",
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extensionName__",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  },  
  "content_scripts": [
    {
      "match_about_blank": true,
      "all_frames": true,
      "js": [
        "js/browser-polyfill.min.js",
        "js/content-script.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_start"
    }
  ]
}
